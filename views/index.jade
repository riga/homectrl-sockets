.container-fluid

  // steering elements
  .row#steering
    .col-12.text-center
      button.btn.btn-default#all-on(role="button")
        i.glyphicon.glyphicon-check
        span  #{locales.allOn}

      button.btn.btn-default#all-off(role="button")
        i.glyphicon.glyphicon-unchecked
        span  #{locales.allOff}

  // sockets
  .row#sockets
    .socket.col-lg-3.col-md-6.col-sm-6.col-xs-12.text-center(data-bind="socket")
      h4(data-bind="label")
      h6(data-bind="descr")
      div.btn-group(role="button")
        button.btn.btn-success#on(role="button")
          i.glyphicon.glyphicon-check
          span  #{locales.on}
        button.btn.btn-danger#off(role="button")
          i.glyphicon.glyphicon-unchecked
          span  #{locales.off}
